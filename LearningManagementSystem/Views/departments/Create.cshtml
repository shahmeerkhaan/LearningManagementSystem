@model LearningManagementSystem.Models.department

@{
    ViewBag.Title = "Create";
}
<style>
    .login-page {
        width: 390px;
        padding: 8% 0 0;
        margin: auto;
    }

        .login-page .form .login {
            margin-top: -31px;
            margin-bottom: 26px;
        }

    .form {
        position: relative;
        z-index: 1;
        background: #FFFFFF;
        max-width: 400px;
        margin: 0 auto 100px;
        padding: 45px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    }

        .form input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0 0 15px;
            padding: 10px;
            box-sizing: border-box;
            font-size: 14px;
        }

    .a {
        font-family: "Roboto", sans-serif;
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 10px;
        box-sizing: border-box;
        font-size: 14px;
        color: white;
        margin-left: 10px
    }

    .form button {
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background-color: #328f8a;
        background-image: linear-gradient(45deg,#328f8a,#08ac4b);
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }

    .form .message {
        margin: 15px 0 0;
        color: #b3b3b3;
        font-size: 12px;
    }

        .form .message a {
            color: #4CAF50;
            text-decoration: none;
        }


    body {
        background-color: #091b1a;
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<body>
    <div class="login-page">
        <div class="form">
            <div class="login">
                <div class="login-header">
                    <h3>Add Department</h3>
                    <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
                </div>
            </div>
            <form class="login-form">
                @Html.EditorFor(model => model.did, new { htmlAttributes = new { placeholder = "Enter  id" } })
                @Html.ValidationMessageFor(model => model.did, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { placeholder = "Enter  Name" } })
                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                <div style="display:flex">
                    <input type="submit" value="Add" class="btn btn-default" />
                    <div class="a">
                        <a>@Html.ActionLink("Back To Main Page", "Index", "Admin")</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
   

</body>
}