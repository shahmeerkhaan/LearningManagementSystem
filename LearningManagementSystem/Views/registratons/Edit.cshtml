@model LearningManagementSystem.Models.registraton

@{
    ViewBag.Title = "Edit";
}
<style>


    a {
        font-family: "Roboto", sans-serif;
        font-size: 14px;
        color: white;
    }

    tr th {
        color: white
    }

    td {
        color: white;
    }

    body {
        color:white;
        margin-top: 20px;
        background-color: #091b1a;
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Regid)

        <div class="form-group">
            @Html.LabelFor(model => model.Cid, "Cid", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Cid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tid, "Tid", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Tid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.stdid, "stdid", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("stdid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.stdid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.did, "did", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("did", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.did, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="display:flex;justify-content:center">
            <input type="submit" value="Save" style="background-color:black;margin-top:10px; width:12%;padding:8px;margin-left:10px;color:white" />
            <div style="background-color:black;margin-top:10px; width:12%;padding:8px;margin-left:10px;text-align:center">
                <a>@Html.ActionLink("Back To List", "Index")</a>
            </div>
        </div>
    </div>
}

