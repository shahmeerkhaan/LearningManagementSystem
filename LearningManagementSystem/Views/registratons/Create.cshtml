@model LearningManagementSystem.Models.registraton

@{
    ViewBag.Title = "Create";
}
<style>
    

    a {
        font-family: "Roboto", sans-serif;
        font-size: 14px;
        color: white;
        
    }
    
    

    body {
        background-color: #091b1a;
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <a>@Html.LabelFor(model => model.Regid, htmlAttributes: new { @class = "control-label col-md-2" })</a>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Regid, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Regid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>@Html.LabelFor(model => model.Cid, "Cid", htmlAttributes: new { @class = "control-label col-md-2" })</a>
        <div class="col-md-10">
            @Html.DropDownList("Cid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Cid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>@Html.LabelFor(model => model.Tid, "Tid", htmlAttributes: new { @class = "control-label col-md-2" })</a>
        <div class="col-md-10">
            @Html.DropDownList("Tid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>@Html.LabelFor(model => model.stdid, "stdid", htmlAttributes: new { @class = "control-label col-md-2" })</a>
        <div class="col-md-10">
            @Html.DropDownList("stdid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.stdid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a> @Html.LabelFor(model => model.did, "did", htmlAttributes: new { @class = "control-label col-md-2" })</a>
        <div class="col-md-10">
            @Html.DropDownList("did", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.did, "", new { @class = "text-danger" })
        </div>
    </div>

    <div style="display:flex;justify-content:center">
        <input type="submit" value="Registered"  style="background-color:black;margin-top:10px; width:12%;padding:8px;margin-left:10px;color:white" />
        <div style="background-color:black;margin-top:10px; width:12%;padding:8px;margin-left:10px">
            <a>@Html.ActionLink("Back To Main Page", "Index", "Admin")</a>
        </div>
    </div>
    
</div>
}


